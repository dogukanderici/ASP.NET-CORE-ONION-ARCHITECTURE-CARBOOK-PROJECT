@model AboutUIViewModel

<section class="ftco-section ftco-about">
    <div class="container">
        <div class="row no-gutters">
            @foreach (var aboutItem in Model.AboutDatas)
            {
                <div class="col-md-6 p-md-5 img img-2 d-flex justify-content-center align-items-center" style="background-image: url(@aboutItem.ImageURL);">
                </div>
                <div class="col-md-6 wrap-about ftco-animate">
                    <div class="heading-section heading-section-white pl-md-5">
                        <span class="subheading">Hakkımızda</span>


                        <h2 class="mb-4">@aboutItem.Title</h2>

                        <p>@aboutItem.Description</p>
                        <p><a href="#" class="btn btn-primary py-3 px-4">Araç Bul</a></p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>