@using System.Globalization
@model FooterUIViewModel

<footer class="ftco-footer ftco-bg-dark ftco-section">
    <div class="container">
        <div class="row mb-5">
            <div class="col-md">
                <div class="ftco-footer-widget mb-4">
                    <h2 class="ftco-heading-2"><a href="#" class="logo">Car<span>book</span></a></h2>
                    <p>Bizi sosyal medya hesaplarımız üzerinden takip edebilirsiniz.</p>
                    <ul class="ftco-footer-social list-unstyled float-md-left float-lft mt-5">
                        @foreach (var item in Model.SocialMediaUIViewModel.ResultDatas)
                        {
                            <li class="ftco-animate"><a href="@item.Url"><span class="icon-@item.Name.ToLower(new CultureInfo("en-US"))"></span></a></li>
                        }
                    </ul>
                </div>
            </div>
            <div class="col-md">
                <div class="ftco-footer-widget mb-4 ml-md-5">
                    <h2 class="ftco-heading-2">Hızlı Linkler</h2>
                    <ul class="list-unstyled">
                        <li><a href="/about" class="py-2 d-block">Hakkımızda</a></li>
                        <li><a href="/service" class="py-2 d-block">Hizmetlerimiz</a></li>
                        <li><a href="#" id="TermsAndContionsButton" class="py-2 d-block">Şartlar & Koşullar</a></li>
                        <li><a href="#" id="SecurityButton" class="py-2 d-block">Güvenlik</a></li>
                        <li><a href="#" id="CookiesButton" class="py-2 d-block">Çerez Politikası</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md">
                <div class="ftco-footer-widget mb-4">
                    <h2 class="ftco-heading-2">Destek</h2>
                    <ul class="list-unstyled">
                        <li><a href="#" class="py-2 d-block">Sıkça Sorulan Sorular</a></li>
                        <li><a href="#" class="py-2 d-block">Ödeme Yöntemleri</a></li>
                        <li><a href="#" class="py-2 d-block">Kiralama İpuçları</a></li>
                        <li><a href="#" class="py-2 d-block">Nasıl Çalışır</a></li>
                        <li><a href="#" class="py-2 d-block">Bize Yazın</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-md">
                <div class="ftco-footer-widget mb-4">
                    <h2 class="ftco-heading-2">Sorunuz Mu Var?</h2>
                    <div class="block-23 mb-3">
                        <ul>
                            @foreach (var item in Model.FooterAddressUIViewModel.FooterAddressDatas)
                            {
                                <li><span class="icon icon-map-marker"></span><span class="text">@item.Address</span></li>
                                <li><a href="#"><span class="icon icon-phone"></span><span class="text">@item.Phone</span></a></li>
                                <li><a href="#"><span class="icon icon-envelope"></span><span class="text">@item.Email</span></a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center">

                <p>
                    Copyright &copy;<script>document.write(new Date().getFullYear());</script> Tüm Hakları Saklıdır | This template is made with <i class="icon-heart color-danger" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Colorlib</a>
                </p>
            </div>
        </div>
    </div>
</footer>

<div id="ftco-loader" class="show fullscreen">
    <svg class="circular" width="48px" height="48px">
        <circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" />
        <circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#F96D00" />
    </svg>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="~/carbook-master/js/jquery.min.js"></script>

<script>
    $(document).ready(function(){

        $("#TermsAndContionsButton").click(function(){
            Swal.fire({
            title: "Şartlar ve Koşullar",
            text: `Araba kiralama sürecine dair tüm hizmet koşullarına rezervasyonun fiziki olarak gerçekleşeceği ofislerimizde yer alan anlaşma dokümanlarından ulaşabilirsiniz.
            Bütün sürecin hasar, ceza, geçişler (HGS, OGS, vb.) ile ilgili detaylar yer almaktadır. Keyifli yolculuklar dileriz.`,
            icon: "info"
            });
        });

        $("#SecurityButton").click(function(){
            Swal.fire({
            title: "Güvenlik ve Gizlilik",
            text: `CarBook web sitemiz Asp.Net Core teknolojisinde Sha256 şifreleme tekniğiyle verilerin tamamen şifreli olarak tutulması alt yapısına sahiptir.
            Sistemimizde JWT doğrulaması yapılmaktadır. Kullanıcıların ödeme yaptıkları kart bilgileri sistemlerimizde kesinlikle saklanmamaktadır.`,
            icon: "info"
            });
        });

        $("#CookiesButton").click(function(){
            Swal.fire({
            title: "Çerez Politikası",
            text: `Sizlere daha iyi hizmet sunmak için tarayıcı çerezlerini kullanmaktayız.`,
            icon: "info"
            });
        });
    });
</script>
