@model CarUIViewModel

@{
    ViewData["Title"] = ViewBag.PageRouteTitle;
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">
            @foreach (var carItem in Model.CarDatas)
            {
                <div class="col-md-4">
                    <div class="car-wrap rounded ftco-animate">
                        <div class="img rounded d-flex align-items-end" style="background-image: url('@carItem.BigImageURL');">
                        </div>
                        <div class="text">
                            <h2 class="mb-0"><a href="/car/cardetail?id=@carItem.CarID">@carItem.Model</a></h2>
                            <div class="d-flex mb-3">
                                <span class="cat">@carItem.Brand.BrandName</span>
                                <p class="price ml-auto">@carItem.CarPricings[0].Amount ₺ <span>/@carItem.CarPricings[0].PricingType.Name</span></p>
                            </div>
                            <p class="d-flex mb-0 d-block">
                                <a href="#" class="btn btn-primary py-2 mr-1">Hemen Kirala</a> <a href="/car/cardetail/@carItem.CarID" class="btn btn-secondary py-2 ml-1">Detaylar</a>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>