@model AuthUIViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("_AuthHeadComponentPartial", new {pageTitle = ViewBag.PageTitle})

<body>

    <div>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="d-flex align-items-center min-vh-100">
                        <div class="w-100 d-block bg-white shadow-lg rounded my-5">
                            <div class="row">
                                <div class="col-lg-5 d-none d-lg-block bg-login rounded-left"></div>
                                <div class="col-lg-7">
                                    <div class="p-5">
                                        <div class="text-center mb-5">
                                            <a href="index.html" class="text-dark font-size-22 font-family-secondary">
                                                <i class="mdi mdi-alpha-x-circle"></i> <b>CarBook @ViewBag.PageTitle</b>
                                            </a>
                                        </div>
                                        <h1 class="h5 mb-1">Hoşgeldiniz!</h1>
                                        <p class="text-muted mb-4">Kullanıcı Adı ve şifrenizi girerek kullanıcı sayfasına erişebilirsiniz!</p>
                                        <form asp-controller="Login" asp-action="Index" class="user" method="post">
                                            <div class="form-group">
                                                <input asp-for="@Model.UserLogin.Username" type="text" class="form-control form-control-user" placeholder="Kullanıcı Adı">
                                            </div>
                                            <div class="form-group">
                                                <input asp-for="@Model.UserLogin.Password" type="password" class="form-control form-control-user" placeholder="Şifre">
                                            </div>
                                            <button type="submit" class="btn btn-success btn-block waves-effect waves-light"> Giriş Yap </button>

                                            <div class="text-center mt-4">
                                                <h5 class="text-muted font-size-16">Şununla Giriş Yap</h5>

                                                <ul class="list-inline mt-3 mb-0">
                                                    <li class="list-inline-item">
                                                        <a href="javascript: void(0);" class="social-list-item border-primary text-primary"><i class="mdi mdi-facebook"></i></a>
                                                    </li>
                                                    <li class="list-inline-item">
                                                        <a href="javascript: void(0);" class="social-list-item border-danger text-danger"><i class="mdi mdi-google"></i></a>
                                                    </li>
                                                    <li class="list-inline-item">
                                                        <a href="javascript: void(0);" class="social-list-item border-info text-info"><i class="mdi mdi-twitter"></i></a>
                                                    </li>
                                                    <li class="list-inline-item">
                                                        <a href="javascript: void(0);" class="social-list-item border-secondary text-secondary"><i class="mdi mdi-github-circle"></i></a>
                                                    </li>
                                                </ul>
                                            </div>

                                        </form>

                                        <div class="row mt-4">
                                            <div class="col-12 text-center">
                                                <p class="text-muted mb-2"><a href="/Auth/ForgotMyPassword" class="text-muted font-weight-medium ml-1">Şifremi Unuttum</a></p>
                                                <p class="text-muted mb-0">Bir hesabınız yok mu? <a href="/Register" class="text-muted font-weight-medium ml-1"><b>Kayıt ol</b></a></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @await Component.InvokeAsync("_AuthScriptComponentPartial")

</body>

</html>