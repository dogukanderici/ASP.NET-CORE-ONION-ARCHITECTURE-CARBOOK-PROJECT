@model AuthUIViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("_AuthHeadComponentPartial")

<body>
    <div>
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="d-flex align-items-center min-vh-100">
                        <div class="w-100 d-block bg-white shadow-lg rounded my-5">
                            <div class="row">
                                <div class="col-lg-5 d-none d-lg-block bg-register rounded-left"></div>
                                <div class="col-lg-7">
                                    <div class="p-5">
                                        <div class="text-center mb-5">
                                            <a href="#" class="text-dark font-size-22 font-family-secondary">
                                                <i class="mdi mdi-alpha-x-circle"></i> <b>
                                                    @ViewBag.PageTitle
                                                </b>
                                            </a>
                                        </div>
                                        <h1 class="h5 mb-1">Yeni Bir Oluşturun!</h1>
                                        <p class="text-muted mb-4">Bir hesabınız yok mu? Bir dakikadan az bir sürede hemen hesabınızı oluşturun!</p>
                                        <form asp-controller="Register" asp-action="Index" class="user" method="post">
                                            <div class="form-group row">
                                                <div class="col-sm-6 mb-3 mb-sm-0">
                                                    <input asp-for="@Model.UserRegister.Name" type="text" class="form-control form-control-user" placeholder="Adınız">
                                                </div>
                                                <div class="col-sm-6">
                                                    <input asp-for="@Model.UserRegister.Surname" type="text" class="form-control form-control-user" placeholder="Soyadınız">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-sm-6 mb-3 mb-sm-0">
                                                    <input asp-for="@Model.UserRegister.Email" type="email" class="form-control form-control-user" placeholder="E-Posta Adresiniz">
                                                </div>
                                                <div class="col-sm-6">
                                                    <input asp-for="@Model.UserRegister.Username" type="text" class="form-control form-control-user" placeholder="Kullanıcı Adınız">
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <div class="col-sm-6 mb-3 mb-sm-0">
                                                    <input asp-for="@Model.UserRegister.Password" type="password" class="form-control form-control-user" placeholder="Şifreniz">
                                                </div>
                                                <div class="col-sm-6">
                                                    <input asp-for="@Model.UserRegister.ConfirmPassword" type="password" class="form-control form-control-user" placeholder="Şifre Tekrarı">
                                                </div>
                                            </div>
                                            <button type="submit" class="btn btn-success btn-block waves-effect waves-light"> Hesap Oluştur </button>

                                            <div class="text-center mt-4">
                                                <h5 class="text-muted font-size-16">Şununla hesap oluştur</h5>

                                                <ul class="list-inline mt-3 mb-0">
                                                    <li class="list-inline-item">
                                                        <a href="javascript: void(0);" class="social-list-item border-primary text-primary"><i class="mdi mdi-facebook"></i></a>
                                                    </li>
                                                    <li class="list-inline-item">
                                                        <a href="javascript: void(0);" class="social-list-item border-danger text-danger"><i class="mdi mdi-google"></i></a>
                                                    </li>
                                                    <li class="list-inline-item">
                                                        <a href="javascript: void(0);" class="social-list-item border-info text-info"><i class="mdi mdi-twitter"></i></a>
                                                    </li>
                                                    <li class="list-inline-item">
                                                        <a href="javascript: void(0);" class="social-list-item border-secondary text-secondary"><i class="mdi mdi-github-circle"></i></a>
                                                    </li>
                                                </ul>
                                            </div>

                                        </form>

                                        <div class="row mt-4">
                                            <div class="col-12 text-center">
                                                <p class="text-muted mb-0">Zaten bir hesabınız var mı?  <a href="/login" class="text-muted font-weight-medium ml-1"><b>Giriş Yap</b></a></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @await Component.InvokeAsync("_AuthScriptComponentPartial")

</body>
</html>