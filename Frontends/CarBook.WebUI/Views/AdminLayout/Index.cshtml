@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

@await Component.InvokeAsync("_AdminUIHeadComponentPartial")

<body>
    <div id="layout-wrapper">

        @await Html.PartialAsync("/Views/AdminLayout/AdminHeaderPartial.cshtml")

        @await Component.InvokeAsync("_AdminUISideBarComponentPartial")

        <div class="main-content">
            @RenderBody()

            @await Component.InvokeAsync("_AdminUIFooterComponentPartial")

        </div>
    </div>
    <div class="menu-overlay"></div>

    @await Component.InvokeAsync("_AdminUIScriptComponentPartial")
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>