@model AdminUIContactViewModel

@{
    ViewData["Title"] = "Gönderilen Mesajlar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Gönderilen Mesajlar</h4>
                        <p class="card-subtitle mb-4">
                            Gönderdiğiniz Mesajlarınızı Görüntüleyebilirsiniz!
                        </p>
                        <div class="table-responsive">

                            <table class="table mb-0">
                                <thead class="thead-light">
                                    <tr>
                                        <th>Ad / Soyad</th>
                                        <th>E-Posta</th>
                                        <th>Konu</th>
                                        <th>Tarih</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var contactItem in Model.ResultDatas)
                                    {
                                        <tr>
                                            <td>@contactItem.Name</td>
                                            <td>@contactItem.Email</td>
                                            <td>@contactItem.Subject</td>
                                            <td>@contactItem.SendDate.ToString("dd.MM.yyyy HH:mm")</td>
                                            <td>
                                                <a class="btn btn-info" href="/admin/contact/outboxdetail?id=@contactItem.ContactID" title="Detaylar">
                                                    <i class="fa fa-info-circle fa-lg" aria-hidden="true"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>