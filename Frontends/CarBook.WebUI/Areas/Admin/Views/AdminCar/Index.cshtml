@model AdminUICarViewModel

@{
    ViewData["Title"] = "Araçlar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araç Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Araçlarla ilgili ekleme, güncelleme ve silme işlemlerini bu ekran üzerinden yapabilirsiniz!
                        </p>
                        <div class="table-responsive">

                            <a class="btn btn-primary mb-4" href="/admin/car/create">
                                <i class="fa fa-plus" aria-hidden="true"></i> Yeni Araç Ekle
                            </a>

                            <table class="table mb-0">
                                <thead class="thead-light">
                                    <tr>
                                        <th style="width: 150px;"></th>
                                        <th>Marka</th>
                                        <th>Model</th>
                                        <th>Km</th>
                                        <th>Vites</th>
                                        <th>Özellikler</th>
                                        <th>Ödeme Bilgileri</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var carItem in Model.CarDatas)
                                    {
                                        <tr>
                                            <td><img src="@carItem.BigImageURL" alt="car-image" style="width: 75px; height: 50px" /></td>
                                            <td>@carItem.Brand.BrandName</td>
                                            <td>@carItem.Model</td>
                                            <td>@carItem.KM</td>
                                            <td>@carItem.Transmission</td>
                                            <td>
                                                <a href="/admin/carfeature/carfeaturedetail?id=@carItem.CarID" class="btn btn-outline-success mi-4">
                                                    <i class="fa fa-certificate fa-lg" aria-hidden="true"></i>
                                                </a>
                                            </td>
                                            <td>
                                                <a href="/admin/carpricing?id=@carItem.CarID" class="btn btn-outline-success mi-4">
                                                    <i class="fas fa-money-bill-wave fa-lg" aria-hidden="true"></i>
                                                </a>
                                            </td>
                                            <td>
                                                <a class="btn btn-info" href="/admin/car/detail?id=@carItem.CarID" title="Detaylar">
                                                    <i class="fa fa-info-circle fa-lg" aria-hidden="true"></i>
                                                </a>
                                                <a class="btn btn-danger" href="/admin/car/delete?id=@carItem.CarID" title="Sil">
                                                    <i class="fa fa-trash fa-lg" aria-hidden="true"></i>
                                                </a>
                                                <a class="btn btn-warning" href="/admin/car/update?id=@carItem.CarID" title="Güncelle">
                                                    <i class="fa fa-pen fa-lg" aria-hidden="true"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>