@model AdminUIBlogCategoryViewModel

@{
    ViewData["Title"] = "Blog Kategorisi Güncelleme";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Blog Kategorisi Güncelleme</h4>
                        <p class="card-subtitle mb-4">
                            Blog Kategorisi Alanı İçin Bilgileri Bu Ekrandan Güncelleyebilirsiniz!
                        </p>

                        <form id="UpdateBlogCategoryForm" asp-area="Admin" asp-controller="AdminBlogCategory" asp-action="UpdateBlogCategory" method="post">
                            @Html.HiddenFor(x => x.UpdateData.BlogCategoryID)
                            <div class="row">
                                <div class="form-group col-xl-3">
                                    <label asp-for="@Model.UpdateData.Name">Blog Kategorisi Adı</label>
                                    <input asp-for="@Model.UpdateData.Name" class="form-control mb-3" placeholder="Blog Kategorisi Adı"></input>
                                </div>
                                <div class="form-group col-xl-3">
                                    <label>Blog Kategori Durumu</label>
                                    <div class="custom-control custom-checkbox">
                                        <input type="checkbox" class="custom-control-input" asp-for="@Model.UpdateData.CategoryStatus">
                                        <label class="custom-control-label" asp-for="@Model.UpdateData.CategoryStatus">Durum</label>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>