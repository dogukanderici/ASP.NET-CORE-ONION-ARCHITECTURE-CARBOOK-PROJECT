@model AdminUIBrandViewModel

@{
    ViewData["Title"] = "Araç Markası Güncelleme";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Araç Markası Güncelleme</h4>
                        <p class="card-subtitle mb-4">
                            Araç Markasına Ait Bilgileri Bu Ekrandan Güncelleyebilirsiniz!
                        </p>

                        <form id="UpdateBrand" asp-area="Admin" asp-controller="AdminBrand" asp-action="UpdateBrand" method="post">
                            @Html.HiddenFor(x => x.UpdateData.BrandID)
                            <div class="row">
                                <div class="form-group col-xl-4">
                                    <label asp-for="@Model.UpdateData.BrandName">Marka</label>
                                    <input asp-for="@Model.UpdateData.BrandName" type="text" class="form-control" placeholder="Marka">
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>