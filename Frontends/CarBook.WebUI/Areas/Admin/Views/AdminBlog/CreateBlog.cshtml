@model AdminUIBlogViewModel

@{
    ViewData["Title"] = "Yeni Blog Oluştur";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    List<SelectListItem> blogCategoryList = ViewBag.BlogCategoryList;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Yeni Blog Yazısı Ekleme</h4>
                        <p class="card-subtitle mb-4">
                            Yeni Blog Yazınıza Ait Bilgileri Buradan Ekleyebilirsiniz!
                        </p>

                        <form id="CreateNewBlogForm" asp-area="Admin" asp-controller="AdminBlog" asp-action="CreateBlog" method="post">
                            <div class="row">
                                <div class="form-group col-xl-6">
                                    <label asp-for="@Model.CreateData.Title">Başlık</label>
                                    <input asp-for="@Model.CreateData.Title" class="form-control mb-3" placeholder="Başlık"></input>
                                </div>
                                <div class="form-group col-xl-6">
                                    <label asp-for="@Model.CreateData.Title">Kategori</label>
                                    <select asp-for="@Model.CreateData.BlogCategoryID" asp-items="@blogCategoryList" class="form-control mb-3"></select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-xl-12">
                                    <label asp-for="@Model.CreateData.Description">Açıklama</label>
                                    <textarea asp-for="@Model.CreateData.Description" rows="12" class="form-control" placeholder="Açıklama"></textarea>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-success waves-effect waves-light">Kaydet</button>
                            <a class="btn btn-outline-danger" href="/admin/blog">Vazgeç</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>