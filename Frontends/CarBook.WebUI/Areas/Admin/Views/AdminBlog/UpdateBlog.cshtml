@model AdminUIBlogViewModel

@{
    ViewData["Title"] = "Blog Güncelleme";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    List<SelectListItem> blogCategoryList = ViewBag.BlogCategoryList;
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Blog Güncelleme</h4>
                        <p class="card-subtitle mb-4">
                            Blog Bilgilerini Bu Ekrandan Düzenleyebilirsiniz!
                        </p>

                        <form id="UpdateBlogForm" asp-area="Admin" asp-controller="AdminBlog" asp-action="UpdateBlog" method="post">
                            @Html.HiddenFor(x => x.UpdateData.BlogID)
                            <div class="row">
                                <div class="form-group col-xl-6">
                                    <label asp-for="@Model.UpdateData.Title">Başlık</label>
                                    <input asp-for="@Model.UpdateData.Title" class="form-control mb-3" placeholder="Başlık"></input>
                                </div>
                                <div class="form-group col-xl-6">
                                    <label asp-for="@Model.UpdateData.Title">Kategori</label>
                                    <select asp-for="@Model.UpdateData.BlogCategoryID" asp-items="@blogCategoryList" class="form-control mb-3"></select>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-xl-12">
                                    <label asp-for="@Model.UpdateData.Description">Açıklama</label>
                                    <textarea asp-for="@Model.UpdateData.Description" rows="12" class="form-control" placeholder="Açıklama"></textarea>
                                </div>
                            </div>
                            <a class="btn btn-info" href="/admin/blogcomment?id=@Model.UpdateData.BlogID">Yorumları Görüntüle</a>
                            <button type="submit" class="btn btn-success waves-effect waves-light">Güncelle</button>
                            <a class="btn btn-outline-danger" href="/admin/blog">Vazgeç</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>