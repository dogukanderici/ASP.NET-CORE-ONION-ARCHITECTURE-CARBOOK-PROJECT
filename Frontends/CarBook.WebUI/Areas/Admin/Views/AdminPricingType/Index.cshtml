@model AdminUIPricingTypeViewModel

@{
    ViewData["Title"] = "Ödeme Planı Türleri";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Ödeme Planı Türleri</h4>
                        <p class="card-subtitle mb-4">
                            Araçlarla İlgili Ödeme Planı Türlerini Listeleme, Ekleme ve Düzenleme İşlemlerini Bu Ekrandan Gerçekleştirebilirsiniz!
                        </p>
                        <div class="table-responsive">

                            <a class="btn btn-primary mb-4" href="/admin/pricingtype/create">
                                <i class="fa fa-plus" aria-hidden="true"></i> Yeni Ödeme Planı Ekle
                            </a>

                            <table class="table mb-0">
                                <thead class="thead-light">
                                    <tr>
                                        <th>#</th>
                                        <th>Ödeme Türü</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var pricingTypeItem in Model.ResultDatas)
                                    {
                                        count++;
                                        <tr>
                                            <td>@count</td>
                                            <td>@pricingTypeItem.Name</td>
                                            <td>
                                                <a class="btn btn-danger" href="/admin/pricingtype/delete?id=@pricingTypeItem.PricingTypeID" title="Sil">
                                                    <i class="fa fa-trash fa-lg" aria-hidden="true"></i>
                                                </a>
                                                <a class="btn btn-warning" href="/admin/pricingtype/update?id=@pricingTypeItem.PricingTypeID" title="Güncelle">
                                                    <i class="fa fa-pen fa-lg" aria-hidden="true"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>