@model AdminUITestimonialViewModel

@{
    ViewData["Title"] = "Müşteri Yorumları Listesi";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Müşteri Yorumları Listesi</h4>
                        @if (Model.ResultDatas.Count() > 0)
                        {
                            <p class="card-subtitle mb-4">
                                Müşteri Yorumlarını Bu Ekrandan Güncelleyebilir, Silebilir Veya Yeni Müşteri Yorumu Bilgisi Ekleyebilirsiniz.
                            </p>
                        }
                        else
                        {
                            <p class="card-subtitle mb-4">
                                Kayıtlı Bir Müşteri Yorumu Henüz Bulunmuyor. Yeni Ekle Butonuna Tıklayarak Yeni Bir Müşteri Yorumu Ekleyebilirisniz!
                            </p>
                        }

                        <div class="table-responsive">

                            <a class="btn btn-primary mb-4" href="/admin/testimonial/create">
                                <i class="fa fa-plus" aria-hidden="true"></i> Yeni Müşteri Ekle
                            </a>

                            @if (Model.ResultDatas.Count() > 0)
                            {
                                <table class="table mb-0">
                                    <thead class="thead-light">
                                        <tr>
                                            <th>Ad / Soyad</th>
                                            <th>Unvan</th>
                                            <th>Görsel</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var testimonialItem in Model.ResultDatas)
                                        {
                                            <tr>
                                                <td>@testimonialItem.Name</td>
                                                <td>@testimonialItem.Title</td>
                                                <td>@testimonialItem.ImageURL</td>
                                                <td>
                                                    <a class="btn btn-danger" href="/admin/testimonial/delete?id=@testimonialItem.TestimonialID" title="Sil">
                                                        <i class="fa fa-trash fa-lg" aria-hidden="true"></i>
                                                    </a>
                                                    <a class="btn btn-warning" href="/admin/testimonial/update?id=@testimonialItem.TestimonialID" title="Güncelle">
                                                        <i class="fa fa-pen fa-lg" aria-hidden="true"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>